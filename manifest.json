{
  "manifest_version": 3,
  "name": "Elevate",
  "version": "1.1",
  "description": "Elevate: Rise Above Distractions. A smart, floating Pomodoro timer that follows you across every website for focused productivity",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "webNavigation",
    "notifications"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["timer.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Elevate Timer Controls"
  },
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  }
}